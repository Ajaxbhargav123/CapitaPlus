@model Capitaplus.Models.CellTypeMaster
@{
    ViewBag.Title = "Create CellType";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .lbl {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-weight: bold;
    }
</style>
<h2 class="text-black-50 text-center">Create CellType</h2>
<hr />
@using (@Html.BeginForm("CreateCell", "MasterCreation"))
{
    <div class="form-group">
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                </div>

                <div class="col-lg-4">
                    <div class="form-group">
                        @Html.LabelFor(x => x.CellType, new { @class = "lbl" })
                        @Html.TextBoxFor(x => x.CellType, new { @class = "form-control", id = "proName" })
                        @Html.ValidationMessageFor(x => x.CellType)
                    </div>  

                    <div class="form-group">
                        @Html.HiddenFor(c => c.Id)
                        @Html.AntiForgeryToken()
                        <button class="btn btn-danger">Create</button>
                    </div>
                </div>

                <div class="col-lg-4">

                </div>
            </div>
        </div>


    </div>

}
@section scripts{
    <script type="text/javascript">
            $(document).ready(function () {
                 $('input[type="text"]').on('keyup', function () {
                this.value = this.value.toUpperCase();
            })
            })
    </script>
}


