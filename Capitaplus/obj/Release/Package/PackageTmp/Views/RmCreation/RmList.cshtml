@model IEnumerable<Capitaplus.Models.RoleMaterialCreation>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .btn {
        font-weight: normal;
        font-size: inherit;
    }

    td {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-weight: normal;
        text-align: center;
    }

    th {
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
        font-size: medium;
        text-align: center;
    }
</style>
<link href="~/Content/DataTables/css/dataTables.bootstrap.css" rel="stylesheet" />
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.18/datatables.min.css" />
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RmList</title>

</head>
<body>

    <table class="table">
        <thead>
            <tr>
                <th>Sr.No</th>
                <th>
                    @Html.DisplayNameFor(model => model.MaterialName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Capacity_AMH)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Color)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Model)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Rate)
                </th>
                <th>Action</th>
            </tr>
        </thead>
        
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaterialName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Capacity_AMH)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Color)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Rate)
                </td>
                <td>
                    @Html.ActionLink("Edit", "RmEdit", "RmCreation", new { id = item.Id }, new { @class = "btn btn-sm btn-warning" })
                </td>
            </tr>
            }

        </tbody>
        
    </table>
</body>
</html>
@section scripts{
     <script src="~/Scripts/jquery-2.2.4.min.js"></script>
    <script src="~/Scripts/DataTables/jquery.dataTables.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.18/datatables.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('.table').DataTable({
                 "pageLength": 5
            });
        })
    </script>

}